@model LAP.Web.Models.ChartModel


@{
    ViewBag.Title = Model.Firma;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chart</h2>

@{
    var myChart = new Chart(width: 600, height: 400)
        .AddTitle("Umsatz")
        .AddSeries(
            name: "Firma",
            xValue: new[] { Model.Firma[1], Model.Firma[2], Model.Firma[3] },
            yValues: new[] { Model.Ausgaben[1], Model.Ausgaben[2], Model.Ausgaben[3] })
        .Write();
}



