@model IEnumerable < LAP.Web.Models.RaumBuchungsModel>

@{
    ViewBag.Title = "Buchen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Buchen</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Meine Buchungen</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @foreach (var raum in Model)
        {

            <dl class="dl-horizontal">
                @Html.HiddenFor(model => raum.Id)



                <dt>
                    @Html.DisplayNameFor(x => x.GebäudeBezeichnung )
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.GebäudeBezeichnung )
                </dd>

                <dt>
                    @Html.DisplayNameFor(x => x.Vorname)
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.Vorname)
                </dd>

                <dt>
                    @Html.DisplayNameFor(x => x.Nachname)
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.Nachname)
                </dd>

                <dt>
                    @Html.DisplayNameFor(x => x.RaumBezeichung)
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.RaumBezeichung)
                </dd>

                <dt>
                    @*@Html.DisplayNameFor(x => x.StartDatum)*@
                    @Html.DisplayName("Datum")
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.StartDatum)
                </dd>

                <dt>
                    @Html.DisplayNameFor(x => x.Plz)
                </dt>

                <dd>
                    @Html.DisplayFor(x => raum.Plz)
                </dd>


                <dd>@Html.ActionLink("Details", "RaumDetails", new { id = raum.Id })</dd>
                <dd>@Html.ActionLink("Rechnung", "RechnungAnzeigen", new { id = raum.Id })</dd>
                <dd>@Html.ActionLink("Stornieren", "RaumDetails", new { id = raum.Id })</dd>
            </dl>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
